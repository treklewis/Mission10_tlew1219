@{
}

@model Book


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>@Model.Title</h4>
        <span class="badge bg-info" style="float:right">
            Price: @Model.Price.ToString("c")
        </span>

    </div>

    <div class="card-text p-1">Author: @Model.Author</div>
    <div class="card-text p-1">Classification/Category: @Model.Classification/@Model.Category</div>
    <div class="card-text p-1">Publisher: @Model.Publisher</div>
    <div class="card-text p-1">Number of Pages: @Model.PageCount</div>
    <div class="card-text p-1">ISBN: @Model.Isbn</div>

    <form method="post" asp-page="/Shop">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <!--Extra bootstrap for mission 10: used outline and data toggle to make button see through and keep background glow when pressed-->
            <button type="submit" class="btn btn-outline-success btn-sm float-end" data-toggle="button" aria-pressed="false" autocomplete="off">Add to Cart</button>
        </span>
    </form>

</div>

